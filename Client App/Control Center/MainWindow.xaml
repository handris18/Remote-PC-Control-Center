<Window x:Class="Control_Center.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_Center"
        mc:Ignorable="d"
        Title="Control Center Client" Height="450" Width="800">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top">
            <MenuItem Height="30" Header="Register device" Click="Register_Click" x:Name="register"></MenuItem>
            <MenuItem Height="30" Header="Connect" Click="Connect_Click" x:Name="connect"></MenuItem>
            <MenuItem Height="30" Header="Disconnect" Click="Disconnect_Click" x:Name="disconnect"></MenuItem>
            <MenuItem Height="30" Header="Exit" Click="Exit_Click" x:Name="exit"></MenuItem>
        </Menu>
        <Ellipse HorizontalAlignment="Left" Height="16" Margin="26,71,0,0" Stroke="Black" Fill="Red" VerticalAlignment="Top" Width="16"/>
        <Label Content="Connection" HorizontalAlignment="Left" Margin="47,66,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
